{
  "name": "ccui",
  "version": "0.0.1",
  "scripts": {
    "start": "cross-env NODE_ENV=development && ccui start -c site/ccui.config.js",
    "build": "npm run compile && npm run dist",
    "compile": "ccui-tools run compile",
    "dist": "ccui-tools run dist",
    "lint": "npm run tsc && npm run lint:script && npm run lint:style",
    "tsc": "tsc --noEmit",
    "lint:script": "eslint --ext '.js,.jsx,.ts,.tsx'",
    "lint:style": "stylelint {site,components}/**/*.less --syntax less",
    "lint-fix": "npm run lint-fix:script && npm run lint-fix:style",
    "lint-fix:script": "npm run lint:script -- --fix",
    "lint-fix:style": "npm run lint:style -- --fix"
  },
  "devDependencies": {
    "@babel/standalone": "^7.10.4",
    "@ccui/theme": "^0.0.1",
    "@ccui/tools": "^0.0.1",
    "@types/classnames": "^2.2.10",
    "@types/react": "^16.9.41",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "codemirror": "^5.55.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "prettier": "^2.0.5",
    "react-dom": "^16.13.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "react": "^16.13.1"
  },
  "license": "MIT"
}
